<UserControl x:Class="Raven.Studio.Database.Document.Preview"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:tk="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
			 xmlns:a="clr-namespace:Raven.Studio.Controls"
			 xmlns:c="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
			 xmlns:cm="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro"
			 xmlns:sh="clr-namespace:Raven.Studio.Controls.JeffWilcox.SyntaxHighlighting"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">


	<tk:DockPanel MinHeight="400"
				  MinWidth="300">
		<TextBlock x:Name="Id"
				   tk:DockPanel.Dock="Top" />

		<sh:SyntaxHighlightingTextBlock SourceLanguage="Json"
										FontSize="16"
										SourceCode="{Binding JsonData}" />
	</tk:DockPanel>


</UserControl>
