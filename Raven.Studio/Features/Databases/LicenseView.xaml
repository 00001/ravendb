<Infrastructure:View x:Class="Raven.Studio.Features.Databases.LicenseView"
					 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					 xmlns:Infrastructure="clr-namespace:Raven.Studio.Infrastructure">

	<StackPanel Orientation="Horizontal">
		<StackPanel.Resources>
			<Style TargetType="HyperlinkButton"
				   BasedOn="{StaticResource HyperlinkButton_FooterLinks}" />
		</StackPanel.Resources>
		
		<TextBlock Text="Licensing Status: " />
		<HyperlinkButton Content="{Binding Status}"
						 Command="{StaticResource ShowLicensingStatusCommand}"
						 CommandParameter="{Binding}" />
	</StackPanel>
</Infrastructure:View>