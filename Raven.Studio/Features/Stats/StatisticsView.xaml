<Infrastructure:View x:Class="Raven.Studio.Features.Stats.StatisticsView"
					 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					 xmlns:Infrastructure="clr-namespace:Raven.Studio.Infrastructure"
					 DataContext="{Binding Path=SelectedDatabase.Value.Statistics.Value}">

	<Grid HorizontalAlignment="Left">
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="8" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<TextBlock Text="{Binding CountOfIndexes}" />
		<TextBlock Grid.Column="2" Text="indexes" />

		<TextBlock Grid.Row="1" Text="{Binding ApproximateTaskCount}" />
		<TextBlock Grid.Row="1" Grid.Column="2" Text="tasks" />

		<TextBlock Grid.Row="2" Text="{Binding CountOfDocuments}" />
		<TextBlock Grid.Row="2" Grid.Column="2" Text="documents" />

		<TextBlock Grid.Row="3" Text="{Binding StaleIndexes}" />
		<TextBlock Grid.Row="3" Grid.Column="2" Text="stale" />

		<TextBlock Grid.Row="4" Text="{Binding Indexes}" />
		<TextBlock Grid.Row="4" Grid.Column="2" Text="Indexes" />

		<TextBlock Grid.Row="5" Text="{Binding Errors}" />
		<TextBlock Grid.Row="5" Grid.Column="2" Text="errors" />

		<TextBlock Grid.Row="6" Text="{Binding Triggers}" />
		<TextBlock Grid.Row="6" Grid.Column="2" Text="triggers" />

		<TextBlock Grid.Row="7" Text="{Binding Extensions}" />
		<TextBlock Grid.Row="7" Grid.Column="2" Text="extensions" />
	</Grid>
</Infrastructure:View>