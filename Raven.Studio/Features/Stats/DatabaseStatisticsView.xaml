<Infrastructure:View x:Class="Raven.Studio.Features.Stats.DatabaseStatisticsView"
					 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					 xmlns:Infrastructure="clr-namespace:Raven.Studio.Infrastructure"
					 DataContext="{Binding Path=Server.Value.SelectedDatabase.Value}">

	<Grid HorizontalAlignment="Left"
		  DataContext="{Binding Path=Statistics.Value}">
		<Grid.Resources>
			<Style x:Name="Statistics_CountText"
				   TargetType="TextBlock">
				<Setter Property="Margin"
						Value="0,0,8,0" />
				<Setter Property="Foreground"
						Value="{StaticResource Brush_ContrastColor}" />
			</Style>
		</Grid.Resources>
		
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<TextBlock Text="Statistics"
				   Style="{StaticResource Style_Text_VerticalHeader}" />
		
		<StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
			<TextBlock Text="{Binding CountOfDocuments, StringFormat='\{0\} documents'}" Style="{StaticResource Statistics_CountText}" />
			<TextBlock Text="{Binding CountOfIndexes, StringFormat='\{0\} indexes'}" Style="{StaticResource Statistics_CountText}" />
			<TextBlock Text="{Binding Path=StaleIndexes.Length, StringFormat='\{0\} stale'}" Style="{StaticResource Statistics_CountText}" />
			<TextBlock Text="{Binding Path=Errors.Length, StringFormat='\{0\} errors'}" Style="{StaticResource Statistics_CountText}" />
			<TextBlock Text="{Binding Path=Triggers.Length, StringFormat='\{0\} triggers'}" Style="{StaticResource Statistics_CountText}" />
			<TextBlock Text="{Binding ApproximateTaskCount, StringFormat='\{0\} tasks'}" Style="{StaticResource Statistics_CountText}" />
		</StackPanel>
	</Grid>
</Infrastructure:View>