<UserControl x:Class="Raven.Studio.Features.Documents.DocumentView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:cm="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro"
			 xmlns:f="clr-namespace:Raven.Studio.Framework"
			 xmlns:ti="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">

	<Grid Margin="12,0,12,6"
		  Height="75"
		  Tag="{Binding Id}"
		  cm:Action.TargetWithoutContext="EditDocumentById"
		  f:DoubleClickEvent.AttachAction="Execute($this.Tag)"
		  Background="Transparent">
		<ti:ContextMenuService.ContextMenu>
			<ti:ContextMenu>
				<ti:MenuItem Header="Edit Document"
							 Tag="{Binding Id}"
							 cm:Action.TargetWithoutContext="EditDocumentById"
							 cm:Message.Attach="Click=Execute($this.Tag)" />
				<ti:MenuItem Header="Delete Document"
							 Tag="{Binding Id}"
							 cm:Action.TargetWithoutContext="DeleteDocument"
							 cm:Message.Attach="Click=Execute($this.Tag)" />
			</ti:ContextMenu>
		</ti:ContextMenuService.ContextMenu>

		<Rectangle Fill="White" />

		<Rectangle HorizontalAlignment="Left"
				   Width="10"
				   Fill="{Binding CollectionType, Converter={StaticResource typeToBrush}}" />

		<Grid Margin="14,0,0,0">
			<StackPanel Orientation="Vertical">
				<TextBlock Text="{Binding Id}"
						   TextTrimming="WordEllipsis"
						   HorizontalAlignment="Left"
						   FontFamily="Monaco"
						   FontStyle="Italic"
						   Margin="0,4,0,8"
						   Opacity="0.3" />
				<TextBlock Text="{Binding Summary}"
						   FontSize="13.333"
						   HorizontalAlignment="Left"
						   TextTrimming="WordEllipsis"
						   FontFamily="Monaco"
						   Margin="12,0,0,0" />
			</StackPanel>
		</Grid>

	</Grid>

</UserControl>
