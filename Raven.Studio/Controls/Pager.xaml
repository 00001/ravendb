<UserControl x:Class="Raven.Studio.Controls.Pager"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">

	<Grid Margin="0 2">

		<TextBlock Text="No items."
				   VerticalAlignment="Center"
				   HorizontalAlignment="Center"
				   Visibility="{Binding Path=HasNoResults, Mode=OneWay, Converter={StaticResource booleanToVisibility}}" />

		<Grid x:Name="HasResults">
			<Grid.Resources>
				<Style TargetType="Button">
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="Button">
								<Border Margin="0,2,2,2"
										CornerRadius="2"
										Background="#19000000"
										Padding="4,2">
									<TextBlock TextWrapping="Wrap"
											   Text="{TemplateBinding Content}"
											   FontSize="8" />
								</Border>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</Grid.Resources>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<TextBlock x:Name="Status"
					   VerticalAlignment="Center"/>

			<StackPanel Orientation="Horizontal"
						Grid.Column="1"
						VerticalAlignment="Center"
						HorizontalAlignment="Right">
				<Button x:Name="MoveFirst"
						Content="|&lt;-" />
				<Button x:Name="MovePrevious"
						Content="&lt;&lt;" />
				<Button x:Name="MoveNext"
						Content="&gt;&gt;" />
				<Button x:Name="MoveLast"
						Content="-&gt;|" />
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>