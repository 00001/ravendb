<UserControl x:Class="Raven.Studio.Controls.Pager"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">

	<Grid Margin="0 4 0 0">

		<TextBlock Text="No items."
				   VerticalAlignment="Center"
				   HorizontalAlignment="Center"
				   Visibility="{Binding Path=HasNoResults, Mode=OneWay, Converter={StaticResource booleanToVisibility}}" />

		<Grid x:Name="HasResults">
			<StackPanel Orientation="Horizontal"
						HorizontalAlignment="Stretch"
						Margin="4">
				<Button x:Name="MovePrevious"
						Content="&lt;-"
						Width="50" />
				<TextBlock x:Name="Status"
						   VerticalAlignment="Center"
						   Margin="4 0 4 0" />
				<Button x:Name="MoveNext"
						Content="-&gt;"
						Width="50" />
			</StackPanel>

		</Grid>
	</Grid>
</UserControl>