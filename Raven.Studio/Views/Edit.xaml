<Infrastructure:View x:Class="Raven.Studio.Views.Edit"
					 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
					 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
					 xmlns:Infrastructure="clr-namespace:Raven.Studio.Infrastructure"
					 xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
					 xmlns:Editors="clr-namespace:Raven.Studio.Controls.Editors"
					 xmlns:shared="http://schemas.actiprosoftware.com/winfx/xaml/shared"
					 mc:Ignorable="d"
					 DataContext="{Binding Source={StaticResource EditDocumentModelLocator}, Path=Current.Value}">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1.5*" />
			<ColumnDefinition Width="16" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<shared:ContextMenuService.ContextMenu>
			<shared:ContextMenu>
				<shared:MenuItem Header="Copy Document Id to Clipboard" />
			</shared:ContextMenu>
		</shared:ContextMenuService.ContextMenu>

		<Grid x:Name="document"
			  Margin="12,0,0,0">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition />
			</Grid.RowDefinitions>

			<TextBlock Text="{Binding DisplayId}" />

			<Grid Grid.Row="1">
				<StackPanel Orientation="Horizontal">
					<Button Content="Save"
							Command="{Binding Save}" />

					<Button Content="Prettify"
							Command="{Binding Prettify}" />

					<Button Content="Delete"
							Command="{Binding Delete}" />

					<Button Content="Refresh"
							Command="{Binding Refresh}" />
				</StackPanel>
			</Grid>

			<TextBox Text="{Binding Key, Mode=TwoWay}"
					 Grid.Row="2" />

			<sdk:TabControl Grid.Row="3"
							Margin="0 8 0 0">
				<sdk:TabItem Header="Data">
					<Editors:JsonEditor Text="{Binding JsonData, Mode=TwoWay}" />
				</sdk:TabItem>
				<sdk:TabItem Header="Metadata">
					<Editors:JsonEditor Text="{Binding JsonMetadata, Mode=TwoWay}" />
				</sdk:TabItem>
			</sdk:TabControl>

		</Grid>

		<Grid x:Name="details"
			  Grid.Column="2"
			  Margin="0,42,0,0">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Border Background="WhiteSmoke"
					CornerRadius="5,0,0,5"
					Grid.RowSpan="4" />

			<TextBlock Text="METADATA"
					   Margin="12,6,0,6" />

			<ItemsControl x:Name="Metadata"
						  Grid.Row="1"
						  DataContext="{Binding Metadata}"
						  Margin="12,0,0,12">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition  />
								<ColumnDefinition />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>

							<TextBlock Text="{Binding Key}"
									    />
							<TextBlock Grid.Column="2"
									   Text="{Binding Value}"
									    />
						</Grid>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>

			<TextBlock  Grid.Row="2"
					   Text="DETAILS"
					   Margin="12,6,0,6" />

			<Grid Margin="12,12,0,12"
				  Grid.Row="3">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition  />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>

				<TextBlock Text="ETag"
						   Grid.Row="1" />
				<TextBlock Text="{Binding Etag}"
						   Grid.Row="1"
						   Grid.Column="2" />

				<TextBlock Text="Last-Modified"
						   Grid.Row="2" />
				<TextBlock Text="{Binding LastModified}"
						   Grid.Row="2"
						   Grid.Column="2" />
			</Grid>

			<StackPanel Orientation="Vertical"
						Grid.Row="4"
						Margin="0,12,0,0"
						Grid.RowSpan="2">
				<Border Background="WhiteSmoke"
						CornerRadius="5,0,0,5"
						Grid.RowSpan="2" />

				<Border Background="WhiteSmoke"
						CornerRadius="5,0,0,5"
						Grid.RowSpan="2"
						Grid.Row="2"
						Margin="0,12,0,0"
						d:LayoutOverrides="GridBox" />

				<TextBlock Text="REFERENCES"
						   Margin="12,6,0,6" />

				<ItemsControl x:Name="References"
							  Grid.Row="1"
							  Margin="12,0,0,12">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<HyperlinkButton Content="{Binding}" />
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>

				<TextBlock Text="RELATED"
						   Margin="12,6,0,6" />

				<ItemsControl x:Name="Related"
							  Grid.Row="1"
							  Margin="12,0,0,12">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<HyperlinkButton Content="{Binding}" />
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>
		</Grid>
	</Grid>
</Infrastructure:View>
