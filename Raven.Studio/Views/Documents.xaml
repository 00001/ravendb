<Infrastructure:View x:Class="Raven.Studio.Documents"
					 xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
					 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					 xmlns:Infrastructure="clr-namespace:Raven.Studio.Infrastructure"
					 xmlns:Documents="clr-namespace:Raven.Studio.Features.Documents"
					 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
					 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
					 mc:Ignorable="d"
					 Title="Documents"
					 Style="{StaticResource PageStyle}"
					 Infrastructure:ModelAttacher.AttachObservableModel="AllDocumentsModel">

	<Grid DataContext="{Binding Path=Value}">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		
		<Documents:DocumentsView DataContext="{Binding Path=Documents.Value}"
								 Margin="{StaticResource Margin_ContentPage}"
								 Tag="Documents" />
		
		<HyperlinkButton Grid.Row="1"
						 Content="Create a New Document"
						 Command="{StaticResource NavigateToCommand}"
						 CommandParameter="/edit?mode=new" />
	</Grid>
</Infrastructure:View>