<Infrastructure:View x:Class="Raven.Studio.Views.Indexes"
					 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					 xmlns:Infrastructure="clr-namespace:Raven.Studio.Infrastructure"
					 xmlns:Indexes="clr-namespace:Raven.Studio.Features.Indexes"
					 Infrastructure:ModelAttacher.AttachObservableModel="IndexesModel"
					 Title="Indexes Page">
	<Grid DataContext="{Binding Value}">
		<StackPanel>
			<HyperlinkButton Content="Create an Index"
							 NavigateUri="/indexes/new?mode=new" />
		</StackPanel>
		<Indexes:IndexesListView />
	</Grid>
</Infrastructure:View>