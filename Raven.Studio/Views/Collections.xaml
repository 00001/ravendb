<Infrastructure:View x:Class="Raven.Studio.Views.Collections"
					 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					 xmlns:Infrastructure="clr-namespace:Raven.Studio.Infrastructure"
					 xmlns:Collections="clr-namespace:Raven.Studio.Features.Collections"
					 Infrastructure:ModelAttacher.AttachModel="Raven.Studio.Models.DatabaseCollectionsModel">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" MaxHeight="400" />
			<RowDefinition Height="*" MinHeight="50" />
		</Grid.RowDefinitions>

		<Collections:CollectionsListView />
		<Collections:CollectionView Margin="{StaticResource Margin_ContentPage}" 
								 	Grid.Row="1" />
	</Grid>
</Infrastructure:View>