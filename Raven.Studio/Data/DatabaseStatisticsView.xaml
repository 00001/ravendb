<UserControl x:Class="Raven.Studio.Data.DatabaseStatisticsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">

	<StackPanel>
		<TextBlock Text="{Binding CountOfDocuments,StringFormat='\{0\} documents'}" />
		<TextBlock Text="{Binding CountOfIndexes,StringFormat='\{0\} indexes'}" />
		<TextBlock Text="{Binding Errors.Length,StringFormat='\{0\} errors'}" />
		<TextBlock Text="{Binding Triggers.Length,StringFormat='\{0\} triggers'}" />
	</StackPanel>

</UserControl>
